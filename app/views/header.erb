<header>
  <a href ="/" id="logo">Chirper</a>
  <div id="user-links">
    <% if current_user %>
      Welcome, <%= current_user.user_name %>
      <a href="/chirps/new" id="add-chirp" class="button">Chirp</a>
      <a href="/sessions/end" id="sign-out" class="button">Sign Out</a>
    <% else %>
      <a href="/sessions/new" id="sign-in" class="button">Sign In</a>
      <a href="/users/new" id="sign-up" class="button">Sign Up</a>
    <% end %>
  </div>
</header>
